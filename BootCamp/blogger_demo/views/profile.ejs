<!doctype html>
<html>
<head>
    <title>Blogger</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/post" class="btn btn-default btn-sm">Create New Post</a>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="well">
            <h3 class="fa fa-laptop"> Local</h3>

                <p>
                    <strong>id</strong>: <%= user.id %><br>
                    <strong>username</strong>: <%= user.username %><br>
                    <strong>email</strong>: <%= user.email %><br>
                    <strong>password</strong>: <%= user.password %><br>
                    <strong>Blog Title</strong>: <%= user.blogTitle %><br>
                    <strong>Blog Description</strong>: <%= user.blogDescription %>
                </p>
        </div>

        <hr>

        <h3> Posts </h3>
        <table span class="well">      
        <% posts.forEach(function(post){ %>
           <tr><td><%= post.title %></td><td>[<%= post.createDate %>]</td><td>[<%= post.updateDate %>]</td>
            <td><a href="/post/<%= post.id %>" class="btn btn-default btn-sm">Edit</a></td>
            <td><a href="/post/delete/<%= post.id %>" class="btn btn-default btn-sm">Delete</a></td></tr>
        <% }); %>
        </table>

        <hr>
        <h3> Latest Comments </h3>
        <% if ( comments.size > 0) { %>
            <% comments.forEach(function(comment){ %>
             <div><%= comment.content %> by <%= comment.author %> [<%= comment.date %>]<a href="/post/<%= comment.postId %>" class="btn btn-default btn-sm">Post</a></div>
            <% }); %>
        <% } %>
</div>
</body>
</html>
